<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_back_color"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:contentDescription="@string/logo"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/allPokemons"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/pokemon_solid"
                android:text="@string/all_pokemons"
                android:textAlignment="center"
                android:textColor="@color/main_color"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                app:rippleColor="@color/main_color"
                app:strokeColor="@color/main_color" />

            <Button
                android:id="@+id/allCategories"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/pokemon_solid"
                android:text="@string/all_categories"
                android:textAlignment="center"
                android:textColor="@color/main_color"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                app:iconTint="@color/main_color"
                app:rippleColor="@color/main_color"
                app:strokeColor="@color/main_color" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="441dp"
                android:layout_height="237dp"
                android:contentDescription="@string/picachoo"
                app:srcCompat="@drawable/picachoo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/settingsButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:contentDescription="@string/settings"
                    app:srcCompat="@drawable/settings"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="" />

                <ImageView
                    android:id="@+id/quitButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/quit_program"
                    app:srcCompat="@drawable/close"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>